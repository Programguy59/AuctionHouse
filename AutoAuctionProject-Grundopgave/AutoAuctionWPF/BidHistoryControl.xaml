<UserControl x:Class="AutoAuctionWPF.BidHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutoAuctionWPF"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Bid history" FontSize="30"></TextBlock>
        <ListView x:Name="BidHistoryListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vehicle Name" Width="120" DisplayMemberBinding="{Binding VehicleName}" />
                    <GridViewColumn Header="Year" Width="50" DisplayMemberBinding="{Binding Year}" />
                    <GridViewColumn Header="Your Bid" Width="80" DisplayMemberBinding="{Binding YourBid}" />
                    <GridViewColumn Header="Accepted Bid" Width="80" DisplayMemberBinding="{Binding AcceptedBid}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="CancelButton" Content="cancel" Width="50" Height="50" Click="CancelButton_OnClick" ></Button>
    </Grid>
</UserControl>
