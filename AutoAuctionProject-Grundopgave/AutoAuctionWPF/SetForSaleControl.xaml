<UserControl x:Class="AutoAuctionWPF.SetForSaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutoAuctionWPF"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
     
            <TextBox x:Name="NameTextBox" Width="200" Text="Name" Margin="0,0,0,10"/>
            <TextBox x:Name="MileageTextBox" Width="200" Text="Mileage" Margin="0,0,0,10"/>
            <TextBox x:Name="RegistrationNumberTextBox" Width="200" Text="Registration Number" Margin="0,0,0,10"/>
            <TextBox x:Name="YearTextBox" Width="200" Text="Year" Margin="0,0,0,10"/>
            
            <TextBox x:Name="StartBidTextBox" Width="200" Text="Start Bid" Margin="0,0,0,10"/>
            <DatePicker x:Name="EndDatePicker" Width="200" Text="End Date" Margin="0,0,0,10"/>
            
            <!-- Specific fields for bus, truck, etc. (UserControls) -->
            
            <Button Content="Set for Sale" Click="SetForSaleButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
