<UserControl x:Class="AutoAuctionWPF.UserProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutoAuctionWPF"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="User Information" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="UserInfoTextBlock" Margin="0,0,0,10"/>
            
     
            <Button Content="Change Password" Click="ChangePasswordButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
